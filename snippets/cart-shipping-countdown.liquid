{%- liquid
  assign cart_total = cart.total_price
  assign threshold = settings.free_shipping_threshold | times: 100
  assign remaining = threshold | minus: cart_total
-%}

 <div class="cart-shipping-countdown py4 px4 mb4 a-center">
  <span>
    {% if cart_total < threshold %}
      <p class="mb1 sm">{{ 'cart.general.free_shipping_before' | t }} {{ remaining | money }} {{ 'cart.general.free_shipping_after' | t }}</p>
    {% else %}
      <p class="mb1 sm">{{ 'cart.general.free_shipping_qualified' | t }}</p>
    {% endif %}
    <small>{{ 'cart.general.free_shipping_exclusions' | t }}</small>
  </span>
</div>
