{% comment %} Banner Image Logic {% endcomment %}

{%- render 'banner-image-snippet',
  id: section.id,
  index: section.index,
  title: blog.title,
  subtitle: blog.metafields.custom.blog_subtitle,
  image: section.settings.image,
  full_width: section.settings.full_width,
  template: template,
  article: article,
  banner_height: section.settings.banner_height,
  heading_text_color: section.settings.heading_text_color
-%}

{% schema %}
{
  "name": "Blog Banner image",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Enable full width",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image",
      "info": "1920px x 600px recommended"
    },
    {
      "type": "range",
      "id": "banner_height",
      "min": 200,
      "max": 600,
      "step": 50,
      "unit": "px",
      "label": "Banner height",
      "default": 400
    },
    {
      "type": "color",
      "id": "heading_text_color",
      "label": "Heading text color",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "show_breadcrumbs",
      "label": "Show breadcrumbs",
      "default": true
    }
  ]
}
{% endschema %}
